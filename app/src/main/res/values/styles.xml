<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#4CFF6D</item>
        <item name="background">@color/activityBar</item>
        <item name="logo">@drawable/ic_launcher</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/ic_launcher</item>
    </style>
</resources>
