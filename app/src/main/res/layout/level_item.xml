<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background_gray">

    <TextView
        android:id="@+id/level_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/point_background2"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#ecf4e2"
        android:textSize="13dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/series_text"
        android:textSize="30dp"
        android:gravity="center"
        android:lines="1"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/description"
        android:layout_margin="5dp"/>

</LinearLayout>