<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locked_background_gray"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/level_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/score"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#ecf4e2"
        android:textSize="13dp"
        android:layout_margin="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/series_text"
        android:text="@string/series_unknown"
        android:textSize="30dp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/level_description_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/description"
        android:layout_margin="5dp"/>

</LinearLayout>